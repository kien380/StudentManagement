<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:StudentManagement.Controls;assembly=StudentManagement"
             x:Class="StudentManagement.Views.ListAllStudentPage"
             Title="{Binding PageTitle}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Search"
                     Icon="ic_search_white.png"
                     Command="{Binding SearchToolbarItemsCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Danh sách học sinh" 
                   TextColor="{StaticResource Grade10ClassNameColor}"
                   FontAttributes="Bold"
                   FontSize="{StaticResource XLargeFontSize}"
                   HorizontalTextAlignment="Center"/>
            
            <!--Search Box-->
            <Frame CornerRadius="10"
                   BackgroundColor="White"
                   Padding="10,0"
                   IsVisible="{Binding ShowSearchBox}">
                <StackLayout Orientation="Horizontal">
                    <controls:CustomEntry
                        Text="{Binding SearchText}"
                        FontSize="{StaticResource MediumFontSize}"
                        Border="None"
                        Placeholder="Nhập tên học sinh"
                        HorizontalOptions="FillAndExpand" />
                    <BoxView WidthRequest="0.5"
                             VerticalOptions="FillAndExpand"
                             Color="Gray"/>
                    <Grid Padding="5">
                        <Label Text="{StaticResource SearchIcon}"
                               TextColor="Purple"
                               Style="{StaticResource MediumLabelIconStyle}"/>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SearchIconCommand}"/>
                        </Grid.GestureRecognizers>
                    </Grid>
                </StackLayout>
            </Frame>

            <!--List Student-->
            <ListView x:Name="ListViewStudents"
                      ItemsSource="{Binding Students}"
                      SeparatorVisibility="None"
                      HasUnevenRows="True"
                      ItemTapped="ListView_OnItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame Margin="2,4"
                                   Padding="10"
                                   CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="47"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!--Avatar & Student ID-->
                                    <StackLayout Grid.Row="0"
                                                 Grid.Column="0"
                                                 Grid.RowSpan="3"
                                                 Margin="0,0,7,0">
                                        <Image Source="{Binding Avatar}"/>
                                        <Frame BackgroundColor="Pink"
                                               CornerRadius="3"
                                               Padding="0"
                                               WidthRequest="40"
                                               HorizontalOptions="Center">
                                            <Label Text="{Binding Id}"
                                                   FontSize="{StaticResource SmallFontSize}"
                                                   HorizontalTextAlignment="Center"/>
                                        </Frame>
                                    </StackLayout>

                                    <!--Student Name-->
                                    <Label Text="{Binding FullName}"
                                           TextColor="{StaticResource Grade10ClassNameColor}"
                                           FontSize="{StaticResource LargeFontSize}"
                                           FontAttributes="Bold"
                                           Grid.Row="0"
                                           Grid.Column="1"
                                           Grid.ColumnSpan="3"/>

                                    <!--Class-->
                                    <Label Text="{StaticResource FlagIcon}"
                                           TextColor="Blue"
                                           Style="{StaticResource ListSmallItemIconStyle}"
                                           Grid.Row="1"
                                           Grid.Column="1"/>
                                    <StackLayout Orientation="Horizontal"
                                                 Grid.Row="1"
                                                 Grid.Column="2"
                                                 Grid.ColumnSpan="2">
                                        <Label Text="Lớp:"
                                               Style="{StaticResource ListSmallItemLabelStyle}"
                                               Margin="0"/>
                                        <Label Text="{Binding ClassName}"
                                               Style="{StaticResource ListSmallItemLabelStyle}"/>
                                    </StackLayout>

                                    <!--Diem HK 1-->
                                    <Label Text="{StaticResource StarIcon}"
                                           TextColor="Blue"
                                           Style="{StaticResource ListSmallItemIconStyle}"
                                           Grid.Row="2"
                                           Grid.Column="1"/>
                                    <StackLayout Orientation="Horizontal"
                                                 Grid.Row="2"
                                                 Grid.Column="2"
                                                 Grid.ColumnSpan="2">
                                        <Label Text="HK1:"
                                               Style="{StaticResource ListSmallItemLabelStyle}"
                                               Margin="0"/>
                                        <Label Text="{Binding ScoreAvg1}"
                                               Style="{StaticResource ListSmallItemLabelStyle}"/>
                                    </StackLayout>

                                    <!--Diem HK 2-->
                                    <StackLayout Orientation="Horizontal"
                                                 Grid.Row="2"
                                                 Grid.Column="3">
                                        <Label Text="{StaticResource StarIcon}"
                                               TextColor="Blue"
                                               Style="{StaticResource ListSmallItemIconStyle}"/>
                                        <Label Text="HK2:"
                                               Style="{StaticResource ListSmallItemLabelStyle}"
                                               Margin="0"/>
                                        <Label Text="{Binding ScoreAvg2}"
                                               Style="{StaticResource ListSmallItemLabelStyle}"/>
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>